{
    "env": {
        "node" : true,
        "es6" : true
    },
    "ecmaFeatures" : {
        "jsx" : true,
        "objectLiteralShorthandMethods" : true
    },
    "plugins": [
        "react"
    ],
    "parser":"babel-eslint",
    "rules": {
        "react/display-name" : 1,
        "semi" : ["error", "always"],
        "strict" : 0,
        "key-spacing" : [2, {
            "beforeColon" : false,
            "afterColon" : true
        }],
        "react/jsx-uses-vars" : 1,
        "indent" : [
            "error",
            4
        ]
    }
}